<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="335dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="56dp"
        android:foregroundGravity="center"
        android:foregroundTint="#1552E6"
        android:foregroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="00:00:00.000"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datetimeScreen" />

    <TextView
        android:id="@+id/datetimeScreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="9dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screen"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/restartBtn"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:backgroundTint="#E92C2C"
            app:icon="@android:drawable/stat_notify_sync_noanim" />

        <Button
            android:id="@+id/lapBtn"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:backgroundTint="#F2B035"
            app:icon="@android:drawable/stat_sys_download" />

        <Button
            android:id="@+id/startBtn"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:backgroundTint="#56C107"
            app:icon="@android:drawable/ic_media_play" />

        <Button
            android:id="@+id/pauseBtn"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:backgroundTint="#38A5FB"
            android:foregroundTintMode="add"
            app:icon="@android:drawable/ic_media_pause" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>